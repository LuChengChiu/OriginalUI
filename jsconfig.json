{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"],
      "@tests/*": ["tests/*"],
      "@modules/*": ["src/scripts/modules/*"],
      "@utils/*": ["src/utils/*"],
      "@script-utils/*": ["src/scripts/utils/*"]
    }
  },
  "exclude": ["node_modules", "dist", "test-results"]
}
