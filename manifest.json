{
  "manifest_version": 3,
  "name": "JustUI",
  "version": "1.0.0",
  "description": "A Chrome extension built with React, Vite, and Tailwind CSS",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "alarms",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "data/defaultRules.json",
        "data/defaultWhitelist.json",
        "data/defaultBlockRequests.json",
        "scripts/injected-script.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "JustUI"
  },
  "icons": {
    "16": "icons/icon_16_transparent.png",
    "48": "icons/icon_48_transparent.png",
    "128": "icons/icon_128_transparent.png"
  }
}
